# Environment Configuration for Agentic AI Code Review

# LLM Provider Selection
# Options: ollama, openai, claude, gemini
LLM_PROVIDER=ollama

# Ollama Settings (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# OpenAI Settings (optional)
# OPENAI_API_KEY=your-api-key-here
# OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude Settings (optional)
# ANTHROPIC_API_KEY=your-api-key-here
# CLAUDE_MODEL=claude-3-sonnet-20240229

# Google Gemini Settings (optional)
# GEMINI_API_KEY=your-api-key-here
# GEMINI_MODEL=gemini-1.5-pro

# Analysis Options
ENABLE_LOGIC_ANALYSIS=true
ENABLE_OPTIMIZATIONS=true
MAX_LLM_RESPONSE_TIME=10
